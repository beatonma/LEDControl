<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/Accent</item>
        <item name="android:colorPrimary">@color/Primary</item>
        <item name="android:colorPrimaryDark">@color/PrimaryDark</item>
        <item name="android:colorAccent">@color/Accent</item>
        <item name="android:textColorPrimary">@color/TextPrimary</item>
        <item name="android:textColorSecondary">@color/TextSecondary</item>
        <item name="android:windowBackground">@color/Primary</item>
        <item name="android:statusBarColor">@color/PrimaryDarkest</item>
        <item name="android:colorControlNormal">@color/PrimaryLight</item>
        <item name="android:colorControlActivated">@color/Accent</item>
        <item name="android:colorControlHighlight">@color/PrimaryLight</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="WidgetAppTheme" parent="AppTheme">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/Transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Card">
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:paddingTop">@dimen/card_padding</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:paddingBottom">@dimen/card_padding_bottom</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="android:background">@drawable/card_selector_dark</item>
        <item name="android:stateListAnimator">@anim/raise</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Card.Dark" parent="Card">
        <item name="android:background">@drawable/card_selector_dark</item>
    </style>

    <!-- Used for wide layout - altered Card to allow child views to handle padding -->
    <style name="Card.NoClip" parent="Card">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Card.NoClip.Dark" parent="Card.NoClip">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@drawable/card_selector_dark</item>
    </style>


    <style name="ListItem">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/TextPrimaryLight</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/flat_button_selector</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="Preference" parent="ListItem">
        <item name="android:clickable">true</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textColor">@color/TextPrimaryLight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="ListItemTitle.Dark" parent="ListItemTitle">
        <item name="android:textColor">@color/TextPrimaryLight</item>
    </style>

    <style name="ListItemDescription">
        <item name="android:textColor">@color/TextSecondaryLight</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListItemDescription.Dark" parent="ListItemDescription">
        <item name="android:textColor">@color/TextSecondaryLight</item>
    </style>

    <style name="Help">
        <item name="android:textColor">@color/TextPrimaryLight</item>
    </style>

    <style name="Help.TitleSmall" parent="Help">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Help.ContentSmall" parent="Help">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:paddingBottom">4dp</item>
    </style>


    <style name="PreferenceSection">
        <item name="android:textColor">@color/TextSecondaryLight</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Button"/>

    <style name="Button.Flat">
        <item name="android:padding">8dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/flat_button_selector</item>
    </style>

    <style name="Button.Flat.Dialog">
        <item name="android:textColor">@color/TextPrimaryLight</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

