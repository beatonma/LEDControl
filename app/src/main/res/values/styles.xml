    <style name="ColorSlider">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="Red" parent="AppTheme">
        <item name="colorControlActivated">@color/Red500</item>
        <item name="android:colorPrimary">@color/Red500</item>
        <item name="android:colorAccent">@color/Red500</item>
        <item name="android:colorControlActivated">@color/Red500</item>
