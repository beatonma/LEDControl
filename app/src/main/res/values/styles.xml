    <style name="Blue" parent="AppTheme">
        <item name="colorControlActivated">@color/Blue500</item>
        <item name="android:colorPrimary">@color/Blue500</item>
        <item name="android:colorAccent">@color/Blue500</item>
        <item name="android:colorControlActivated">@color/Blue500</item>
